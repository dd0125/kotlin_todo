<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/input_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal">
        <Button
                android:layout_width="50dp" android:layout_height="match_parent"
                android:text="ALL"
        />
        <EditText
            android:id="@+id/input_new_todo_edit_text"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"
            android:hint="New Task"
            android:imeOptions="actionDone"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#eff"
            app:layout_constraintTop_toBottomOf="@+id/input_linear_layout"
            app:layout_constraintBottom_toTopOf="@+id/footer_liner_layout">
        <ListView
                android:id="@+id/task_list_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

        </ListView>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/footer_liner_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="footer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>